{
    "name": "trubadur",
    "description": "Music theory e-learning mobile application.",
    "version": "1.0.0",
    "keywords": [
        "trubadur",
        "music",
        "music theory",
        "quiz",
        "gamification"
    ],
    "private": false,
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/volkmaster/trubadur"
    },
    "bugs": {
        "url": "https://github.com/volkmaster/trubadur/issues"
    },
    "author": {
        "name": "Ziga Vucko",
        "email": "ziga.vucko@gmail.com",
        "url": "http://www.gep.si"
    },
    "scripts": {
        "serve": "php artisan serve",
        "dev": "npm run development",
        "development": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
        "watch": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --watch --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
        "watch-poll": "npm run watch -- --watch-poll",
        "hot": "cross-env NODE_ENV=development node_modules/webpack-dev-server/bin/webpack-dev-server.js --inline --hot --config=node_modules/laravel-mix/setup/webpack.config.js",
        "prod": "npm run production",
        "production": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
        "test": "php vendor/phpunit/phpunit/phpunit",
        "lint": "eslint --ext .js,.vue resources/assets webpack.mix.js",
        "postinstall": "npm run prod"
    },
    "pre-commit": [
        "lint"
    ],
    "dependencies": {
        "axios": "^0.16.2",
        "cross-env": "^5.1.1",
        "eslint": "^4.11.0",
        "eslint-config-standard": "^10.2.1",
        "jquery": "^3.2.1",
        "laravel-mix": "^2.1.14",
        "lodash": "^4.17.11",
        "moment": "^2.22.2",
        "node-sass": "^4.11.0",
        "vue": "^2.5.3",
        "vue-awesome": "^2.3.4",
        "vue-router": "^3.0.1",
        "vue-template-compiler": "^2.5.3",
        "vuex": "^3.0.1"
    },
    "devDependencies": {
        "browser-sync": "^2.26.3",
        "browser-sync-webpack-plugin": "^1.2.0",
        "eslint-plugin-html": "^3.2.2",
        "eslint-plugin-import": "^2.8.0",
        "eslint-plugin-node": "^5.2.1",
        "eslint-plugin-promise": "^3.6.0",
        "eslint-plugin-standard": "^3.0.1",
        "pre-commit": "^1.2.2"
    }
}
